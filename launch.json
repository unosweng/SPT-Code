            // main.py
            "cwd": "${workspaceFolder}/spt-code/sources",
            "program": "${workspaceFolder}/spt-code/sources/main.py",
            "console": "integratedTerminal",
            "args": "--do-pre-train --pre-train-tasks mass --batch-size 16 --eval-batch-size 32 --cuda-visible-devices 0 --fp16 --model-name pre_train --pre-train-subset-ratio 0.001 --pre-train-parse-subset-ratio 0.1 --train-subset-ratio 0.001 --n-epoch 1 --n-epoch-pre-train 1 --remove-existing-saved-file",
            // --n-epoch-pre-train was added to reduce running time.
        },
        {
            "name": "Python Debugger: Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}"
        }
    ]
